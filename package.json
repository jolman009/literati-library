{
  "name": "literati-app",
  "version": "1.0.0",
  "description": "A comprehensive digital library application with AI-powered features",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "client2",
    "server2"
  ],
  "scripts": {
    "test": "pnpm run test:all",
    "test:all": "pnpm run test:client && pnpm run test:server && pnpm run test:ai-service",
    "test:client": "cd client2 && pnpm run test:coverage",
    "test:server": "cd server2 && pnpm run test:coverage",
    "test:ai-service": "cd ai-service && python -m pytest --cov=src --cov-report=term-missing",
    "test:e2e": "cd client2 && pnpm run test:e2e",
    "test:watch": "pnpm run --parallel --recursive test:watch",
    "dev": "pnpm run --parallel dev:client dev:server dev:ai-service",
    "dev:client": "cd client2 && pnpm run dev",
    "dev:server": "cd server2 && pnpm run dev",
    "dev:ai-service": "cd ai-service && python -m uvicorn main:app --reload --port 8000",
    "build": "pnpm run build:client",
    "build:client": "cd client2 && pnpm run build",
    "start": "pnpm run --parallel start:client start:server start:ai-service",
    "start:client": "cd client2 && pnpm run preview",
    "start:server": "cd server2 && pnpm run start",
    "start:ai-service": "cd ai-service && python -m uvicorn main:app --port 8000",
    "lint": "pnpm run --recursive lint",
    "install:all": "pnpm install && cd ai-service && pip install -r requirements.txt",
    "install:test-deps": "cd client2 && pnpm install && cd ../server2 && pnpm install && cd ../ai-service && pip install -r requirements-test.txt",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "setup": "pnpm run install:all && pnpm run install:test-deps"
  },
  "engines": {
    "node": ">=20.16.0",
    "pnpm": ">=10.12.0",
    "python": ">=3.11.0"
  },
  "keywords": [
    "digital-library",
    "react",
    "express",
    "fastapi",
    "ai",
    "supabase",
    "progressive-web-app"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}