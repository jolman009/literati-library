{
  "name": "literati-staging",
  "buildCommand": "cd client2 && pnpm install --frozen-lockfile --ignore-workspace && pnpm run build:staging",
  "outputDirectory": "client2/dist",
  "framework": "vite",
  "env": {
    "VITE_APP_NAME": "Literati (Staging)",
    "VITE_APP_ENV": "staging"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "https://literati-api-staging.onrender.com",
      "VITE_AI_SERVICE_URL": "https://literati-ai-staging.onrender.com",
      "VITE_ENABLE_SERVICE_WORKER": "true",
      "VITE_DEBUG_MODE": "false"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/|assets/|favicon\\.|robots\\.txt|manifest\\.|sw\\.).*)",
      "destination": "/index.html"
    }
  ]
}