# Literati.pro Environment Configuration
# Copy this file to .env.local for development or configure in deployment

# ================================
# CORE API CONFIGURATION (REQUIRED)
# ================================

# Base URL for the backend API (REQUIRED)
# Development: http://localhost:5000
# Staging: https://api-staging.literati.pro
# Production: https://api.literati.pro
VITE_API_BASE_URL=http://localhost:5000

# API request timeout in milliseconds (optional, defaults to 30000)
VITE_API_TIMEOUT=30000

# ================================
# ENVIRONMENT CONFIGURATION
# ================================

# Environment identifier (optional, auto-detected if not set)
# Options: development, staging, production
VITE_ENVIRONMENT=development

# ================================
# FEATURE FLAGS
# ================================

# Enable analytics and user tracking (optional, defaults to false)
VITE_ENABLE_ANALYTICS=false

# Enable crash reporting (optional, defaults to false)
VITE_ENABLE_CRASH_REPORTING=false

# Enable offline functionality (optional, defaults to true)
VITE_ENABLE_OFFLINE=true

# Enable gamification features (optional, defaults to true)
VITE_ENABLE_GAMIFICATION=true

# Enable AI-powered features (optional, defaults to false until implemented)
VITE_ENABLE_AI_FEATURES=false

# ================================
# SECURITY CONFIGURATION
# ================================

# Token storage key in localStorage (optional, defaults to 'literati_token')
VITE_TOKEN_KEY=literati_token

# Use secure cookies for token storage (optional, defaults to true in production)
VITE_USE_SECURE_COOKIES=false

# Enforce HTTPS for all requests (optional, defaults to true in production)
VITE_ENFORCE_HTTPS=false

# In development, prefer Authorization header over cookies
# This helps when testing across devices or different local hosts where
# cross-site cookies can be blocked or unreliable.
# Only honored in development builds.
VITE_DEV_HEADER_AUTH=false

# ================================
# APPLICATION METADATA
# ================================

# Application name (optional, defaults to 'Literati')
VITE_APP_NAME=Literati

# Application version (optional, defaults to '1.0.0')
VITE_APP_VERSION=1.0.0

# Build hash for cache busting (optional, auto-generated if not set)
VITE_BUILD_HASH=dev-build

# ================================
# EXTERNAL SERVICES (Optional)
# ================================

# Google Analytics tracking ID (if analytics enabled)
# Example: VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking (if crash reporting enabled)
# Example: VITE_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
VITE_SENTRY_DSN=

# Enable Sentry in development (optional, defaults to false)
VITE_SENTRY_DEV_ENABLED=false

# Supabase configuration (if using Supabase for storage)
# VITE_SUPABASE_URL=https://xxxxx.supabase.co
# VITE_SUPABASE_ANON_KEY=xxxxx

# OpenAI API key (if AI features enabled)
# VITE_OPENAI_API_KEY=your_openai_key

# ================================
# CLOUD STORAGE INTEGRATION
# ================================

# Google Drive API configuration (for cloud import feature)
# Required for Google Drive file imports
# Get credentials from: https://console.cloud.google.com
# 1. Create a project
# 2. Enable Google Drive API
# 3. Create OAuth 2.0 Client ID credentials
# 4. Add authorized JavaScript origins: http://localhost:5173, https://yourdomain.com
# Example: VITE_GOOGLE_CLIENT_ID=123456789-abc123.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_ID=

# Google API Key (for Drive Picker)
# Get from: https://console.cloud.google.com/apis/credentials
# Example: VITE_GOOGLE_API_KEY=your_google_api_key
VITE_GOOGLE_API_KEY=

# Dropbox App configuration (for cloud import feature)
# Required for Dropbox file imports
# Get credentials from: https://www.dropbox.com/developers/apps
# Example: VITE_DROPBOX_APP_KEY=abc123xyz
VITE_DROPBOX_APP_KEY=

# ================================
# PLATFORM-SPECIFIC CONFIGURATION
# ================================

# Android package identifier for TWA
# VITE_ANDROID_PACKAGE_ID=com.literati.app

# iOS bundle identifier
# VITE_IOS_BUNDLE_ID=com.literati.app

# Windows app identifier
# VITE_WINDOWS_APP_ID=LiteratiApp

# ================================
# DEVELOPMENT CONFIGURATION
# ================================

# Enable debug logging in development (optional, defaults to true in dev)
VITE_DEBUG_LOGGING=true

# Mock API responses for offline development (optional, defaults to false)
VITE_MOCK_API=false

# Skip authentication in development (optional, defaults to false)
VITE_SKIP_AUTH=false

# ================================
# EXAMPLE CONFIGURATIONS
# ================================

# Development Setup:
# VITE_API_BASE_URL=http://localhost:5000
# VITE_ENVIRONMENT=development
# VITE_ENABLE_ANALYTICS=false
# VITE_DEBUG_LOGGING=true

# Staging Setup:
# VITE_API_BASE_URL=https://api-staging.literati.pro
# VITE_ENVIRONMENT=staging
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_CRASH_REPORTING=true
# VITE_ENFORCE_HTTPS=true

# Production Setup:
# VITE_API_BASE_URL=https://api.literati.pro
# VITE_ENVIRONMENT=production
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_CRASH_REPORTING=true
# VITE_USE_SECURE_COOKIES=true
# VITE_ENFORCE_HTTPS=true
# VITE_ENABLE_AI_FEATURES=true

