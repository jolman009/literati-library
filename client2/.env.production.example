# Production Environment Configuration (Example)
# Copy to .env.production and fill in your actual values

# API Configuration - Production servers
VITE_API_BASE_URL=https://your-api.example.com
VITE_AI_SERVICE_URL=https://your-ai.example.com

# Service Worker - Fully enabled for PWA
VITE_ENABLE_SERVICE_WORKER=true

# Debug Features - Disabled in production
VITE_DEBUG_MODE=false

# Supabase Configuration (production database)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Environment identification
VITE_APP_ENV=production

# Performance optimizations
VITE_ENABLE_ANALYTICS=true

# ================================
# ERROR TRACKING & MONITORING
# ================================
VITE_SENTRY_DSN=
VITE_ENABLE_CRASH_REPORTING=true
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production
VITE_SENTRY_DEV_ENABLED=false

# ================================
# SECURITY CONFIGURATION
# ================================
VITE_STRICT_MODE=true
VITE_USE_SECURE_COOKIES=true
VITE_ENFORCE_HTTPS=true
VITE_TOKEN_KEY=literati_token

# ================================
# GOOGLE INTEGRATION
# ================================
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
VITE_GOOGLE_API_KEY=your_google_api_key

# ================================
# FEATURE FLAGS
# ================================
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_AI_FEATURES=false

# ================================
# DEBUGGING & LOGGING
# ================================
VITE_DEBUG_LOGGING=false
VITE_MOCK_API=false
VITE_SKIP_AUTH=false
