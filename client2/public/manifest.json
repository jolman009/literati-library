{
  "id": "shelfquest-pwa",
  "name": "ShelfQuest",
  "short_name": "ShelfQuest",
  "description": "ShelfQuest - Your digital library companion for managing books with reading tracking and annotations",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "background_color": "#fff7fe",
  "theme_color": "##24A8E0",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "categories": ["books", "education", "productivity"],
  "protocol_handlers": [
    {
      "protocol": "web+shelfquest",
      "url": "/book?id=%s"
    }
  ],
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "16x16 32x32 48x48",
      "type": "image/x-icon",
      "purpose": "any"
    },
    {
      "src": "/favicon-96x96.png",
      "type": "image/png",
      "sizes": "96x96",
      "purpose": "any"
    },
    {
      "src": "/android-launchericon-96-96.png",
      "type": "image/png",
      "sizes": "96x96",
      "purpose": "any"
    },
    {
      "src": "/shelfquest-logo-144.png",
      "type": "image/png",
      "sizes": "144x144",
      "purpose": "any"
    },
    {
      "src": "/shelfquest-logo-192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "maskable any"
    },
    {
      "src": "/shelfquest-logo-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any"
    },
    {
      "src": "/web-app-manifest-512x512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Library",
      "short_name": "Library",
      "description": "Browse your book collection",
      "url": "/library",
      "icons": [
        {
          "src": "/shelfquest-logo-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Upload Book",
      "short_name": "Upload",
      "description": "Add a new book to your library",
      "url": "/upload",
      "icons": [
        {
          "src": "/shelfquest-logo-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your reading dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/shelfquest-logo-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/SplashScreen.scale-100.png",
      "sizes": "620x300",
      "type": "image/png",
      "form_factor": "wide",
      "label": "ShelfQuest Splash Screen"
    },
    {
      "src": "/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "ShelfQuest Dashboard"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "ShelfQuest Mobile View"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": []
}