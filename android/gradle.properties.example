# Project-wide Gradle settings.

# IDE (e.g. Android Studio) users:
# Gradle settings configured through the IDE *will override*
# any settings specified in this file.

# For more details on how to configure your build environment visit
# http://www.gradle.org/docs/current/userguide/build_environment.html

# Specifies the JVM arguments used for the daemon process.
# The setting is particularly useful for tweaking memory settings.
# Ensure JAVA_HOME is set to Java 11 or higher
org.gradle.jvmargs=-Xmx4g -XX:MaxMetaspaceSize=1g -XX:+HeapDumpOnOutOfMemoryError -Dfile.encoding=UTF-8

# When configured, Gradle will run in incubating parallel mode.
# This option should only be used with decoupled projects. More details, visit
# http://www.gradle.org/docs/current/userguide/multi_project_builds.html#sec:decoupled_projects
org.gradle.parallel=true

# AndroidX package structure to make it clearer which packages are bundled with the
# Android operating system, and which are packaged with your app"s APK
# https://developer.android.com/topic/libraries/support-library/androidx-renames
android.useAndroidX=true

# Kotlin code style
kotlin.code.style=official

# Enables namespacing of each library's R class so that its R class includes only the
# resources declared in the library itself and none from the library's dependencies,
# thereby reducing the size of the R class for that library
android.nonTransitiveRClass=true

# Disable BuildConfig generation
android.defaults.buildfeatures.buildconfig=false

# Disable AIDL compilation
android.defaults.buildfeatures.aidl=false

# Disable RenderScript compilation
android.defaults.buildfeatures.renderscript=false

# Disable resource shrinking for debug builds
android.enableResourceShrinking.debug=false

# Enable resource shrinking for release builds
android.enableResourceShrinking.release=true

# Enable R8 full mode
android.enableR8.fullMode=true

# Enable new resource processing pipeline
android.enableNewResourceProcessing=true

# ==============================================================================
# PWA CONFIGURATION
# ==============================================================================
# Main PWA URL - Replace with your actual deployed PWA URL
PWA_URL=https://client2-o2l1nijre-joel-guzmans-projects-f8aa100e.vercel.app

# Alternative domain (if you have a custom domain)
PWA_CUSTOM_DOMAIN=https://pro.literati.app

# App branding
APP_NAME=Literati
APP_PACKAGE_NAME=org.shelfquest.app
APP_VERSION_NAME=1.0.0
APP_VERSION_CODE=1

# TWA Configuration
TWA_DISPLAY_MODE=standalone
TWA_ORIENTATION=portrait
TWA_THEME_COLOR=#6750A4
TWA_BACKGROUND_COLOR=#FFFBFE
TWA_START_URL=/

# ==============================================================================
# DIGITAL ASSET LINKS CONFIGURATION
# ==============================================================================
# These values will be used to generate the Digital Asset Links
# SHA256 fingerprints (will be generated by the keystore script)
DEBUG_KEYSTORE_SHA256=YOUR_DEBUG_SHA256_HERE
RELEASE_KEYSTORE_SHA256=YOUR_RELEASE_SHA256_HERE

# Keystore configuration for release builds
KEYSTORE_FILE=../release.keystore
KEYSTORE_PASSWORD=YOUR_KEYSTORE_PASSWORD
KEY_ALIAS=shelfquest_key
KEY_PASSWORD=YOUR_KEY_PASSWORD

# ==============================================================================
# BUILD OPTIMIZATION
# ==============================================================================
# Enable parallel garbage collection
org.gradle.jvmargs=-Xmx4g -XX:+UseParallelGC

# Enable Gradle build cache
org.gradle.caching=true

# Enable configuration cache (experimental)
org.gradle.configuration-cache=true

# Enable file system watching
org.gradle.vfs.watch=true

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
# Enable ProGuard/R8 optimization
android.enableR8=true

# Enable code shrinking
android.enableCodeShrinking=true

# Network security configuration
NETWORK_SECURITY_CONFIG=true

# ==============================================================================
# PLAY STORE CONFIGURATION
# ==============================================================================
# Play Console upload key fingerprint
PLAY_CONSOLE_UPLOAD_KEY_SHA256=YOUR_UPLOAD_KEY_SHA256

# App signing configuration
PLAY_SIGNING_ENABLED=true

# Play Asset Delivery
PLAY_ASSET_DELIVERY_ENABLED=false

# Play Feature Delivery
PLAY_FEATURE_DELIVERY_ENABLED=false

# ==============================================================================
# ANALYTICS AND MONITORING
# ==============================================================================
# Enable crash reporting
CRASHLYTICS_ENABLED=false

# Enable performance monitoring
PERFORMANCE_MONITORING_ENABLED=false

# Enable analytics
ANALYTICS_ENABLED=false

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Enable debug mode
DEBUG_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Enable developer options
DEVELOPER_OPTIONS=false

# Test URL for development
DEV_PWA_URL=http://localhost:3000

# Staging URL
STAGING_PWA_URL=https://your-staging-url.vercel.app

# ==============================================================================
# TARGET SDK COMPLIANCE (Android 14 - API 34)
# ==============================================================================
# Minimum SDK version (Android 7.0 - API 24)
MIN_SDK_VERSION=24

# Target SDK version (Android 14 - API 34)
TARGET_SDK_VERSION=34

# Compile SDK version (Android 14 - API 34)
COMPILE_SDK_VERSION=34

# Build tools version
BUILD_TOOLS_VERSION=34.0.0

# ==============================================================================
# LIBRARY VERSIONS
# ==============================================================================
# AndroidX Browser Helper version
BROWSER_HELPER_VERSION=2.5.0

# Material Design Components version
MATERIAL_VERSION=1.10.0

# AndroidX Core version
ANDROIDX_CORE_VERSION=1.12.0

# AndroidX Activity version
ANDROIDX_ACTIVITY_VERSION=1.8.1

# AndroidX Fragment version
ANDROIDX_FRAGMENT_VERSION=1.6.2

# ==============================================================================
# CERTIFICATE TRANSPARENCY
# ==============================================================================
# Enable certificate transparency logging
CERT_TRANSPARENCY_ENABLED=true

# ==============================================================================
# BACKUP AND RESTORE
# ==============================================================================
# Enable Auto Backup
AUTO_BACKUP_ENABLED=true

# Enable app data backup
APP_DATA_BACKUP_ENABLED=true

# ==============================================================================
# USAGE INSTRUCTIONS
# ==============================================================================
# 1. Copy this file to gradle.properties (remove .example extension)
# 2. Update PWA_URL with your actual deployed PWA URL
# 3. Update APP_PACKAGE_NAME if you want a different package name
# 4. Generate keystore using the provided script
# 5. Update keystore configuration with actual values
# 6. Set appropriate passwords for production builds
# 7. Update SHA256 fingerprints after keystore generation
